{
  "compilerOptions": {
    "composite": true,
    "target": "ES2017",
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationMap": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/matrix-type-declarations"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts"
  ]
}
